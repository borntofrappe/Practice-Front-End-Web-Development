@import url('https://fonts.googleapis.com/css?family=Roboto+Mono:700');

// define colors and fonts used in the stylesheet
color-background = #252525
color-button = #EBE9E7
font-button = 'Roboto Mono', monospace

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    color color-background
    background-color color-background
    font-family font-button

.container
    // display the display and the grid of buttons in a single column layout, one on top of another in the center of the page
    display flex 
    flex-direction column 
    align-items center
    justify-content center 
    height 100vh

.container__display
    // create a box with slightly rounded corners in which to display a paragraph with the value of the button pressed
    width 14rem 
    height 5rem
    background-color color-button
    font-size 3rem
    text-align right
    line-height 5rem
    padding 0 1rem
    border 3px solid darken(color-button, 20%)
    border-radius 5px
    margin 1.2rem 0
    

.container__buttons
    // create a 3x3 grid of squares with a size of 62px
    display grid
    grid-template-columns repeat(3, 62px)
    grid-template-rows repeat(3, 62px)
    grid-gap 14px

    button
        width 100%
        height 100%
        border-radius 4px
        // style the buttons with a border of a slightly darker color 
        outline none
        font-family inherit
        font-weight bold 
        font-size 2rem
        background-color color-button 
        color color-background
        border 0 solid darken(color-button, 20%)
        // create a different border size for the top, the sides, the bottom
        border-width 3px 4px 5px

        &:active
            // when the buttons are pressed, change the background color and the border color
            background-color darken(color-button, 5%)
            border-color darken(color-button, 50%)