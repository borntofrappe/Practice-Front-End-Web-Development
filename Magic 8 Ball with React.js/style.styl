@import url('https://fonts.googleapis.com/css?family=Lato');

// define variables for the font and color used in the project
font-main = 'Lato', sans-serif
color-ball = #242422
color-text = #ededed
color-background = #81a377

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    font-family font-main
    background linear-gradient(to bottom, lighten(color-background, 15%), color-background)    

.container
	// center the content of the application horizontally
	width 100%
	height 100vh 
	display flex
	justify-content center
	
	svg 
		// let the svg span the entire height, maintain a min-width to allow for the text to always be visible in the center
		height 100%
		min-width 600px
		width auto

	div 
		// position the text in the center of the page, directly in the center of the SVG
		position absolute 
		width 200px
		height 150px
		top calc(50% - 30px)
		left calc(50% - 100px)
		text-align center
		cursor pointer
		padding 0 1.5rem
		
		p
			color color-text
			text-transform uppercase
			font-weight bold
			line-height 1.2
			letter-spacing 0.2rem
			font-size 1.1rem
			