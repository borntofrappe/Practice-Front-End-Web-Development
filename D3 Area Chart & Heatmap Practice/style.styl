// import font(s)
@import url("https://fonts.googleapis.com/css?family=PT+Sans")

// detail root variable(s)
font = "PT Sans", sans-serif
color-accent = #FFD700
color-bg = #FFF
color-bg-d = #262626
color-bg-l = #323232
color-text = color-bg-d

*
    box-sizing border-box
    margin 0
    padding 0

body
    min-height 100vh
    width 100%
    font-family font
    color color-text
    // include the road pattern through a repeating linear gradient
    background repeating-linear-gradient(-60deg, color-bg-d, color-bg-d 10px, color-bg-l 10px, color-bg-l 20px)


.container
    // cap the width of the parent container and center it horizontally
    max-width 600px
    margin 1rem auto
    width 90vw
    background lighten(color-bg-l, 20%)
    box-shadow 0 1px 5px darken(color-bg-d, 10%)
    padding 1rem

    h1
        // include the heading as a label, slightly offset off of the parent container
        position relative
        left -2rem
        display inline-block
        background color-accent
        padding 0.5rem 0.75rem
        font-size 1rem
        box-shadow 0 0 1px darken(color-accent, 40%)
        // position relative to absolute position the pseudo element
        position relative
        // with a pseudo element add an arrow pointing up and to the right, right beneath the label
        &:before
            content ''
            position absolute
            top 100%
            left 0
            border-top 1rem solid darken(color-accent, 40%)
            border-right 1rem solid darken(color-accent, 40%)
            border-bottom 1rem solid transparent
            border-left 1rem solid transparent
            z-index -10

    p
        line-height 2

    .viz
        margin 1rem 0
        padding 1rem
        background color-bg
        box-shadow 0 0 1px darken(color-accent, 40%)

    a
        color lighten(color-text, 80%)

// style the tooltip to have the first paragraph bold
#tooltip
    position absolute
    opacity 0
    pointer-events none
    padding 1rem 1.5rem
    line-height 2
    border-top 5px solid color-bg-d
    background color-bg
    box-shadow 0 1px 4px lighten(color-bg-d, 20%)
    border-radius 0 0 4px 4px

    p:nth-of-type(1)
        font-weight bold