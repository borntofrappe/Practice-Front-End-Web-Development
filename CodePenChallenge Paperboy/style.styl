@import url('https://fonts.googleapis.com/css?family=Merriweather:900|Open+Sans:700');


color-background = #F8F8F8
color-text = #222
font-body = 'Open Sans', sans-serif
font-header = 'Merriweather', serif
  
*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    font-family font-body
    color color-text
    background-color color-background
    
.newspaper
    margin 2rem 1rem
    
.newspaper__header
    display grid
    // display columns which are at least 300px wide, otherwise occupying a fraction of the page
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    // center items in the row
    justify-items center
    // and in the column
    align-items center
    text-align center
    // separate the header section from the rest of the newspaper
    border-bottom 0.2rem solid color-text;

    h1, h2
        text-transform uppercase
        margin 1rem 0
        
    h1
        font-family font-header
        font-size 2.5rem
        
        
 h2.newspaper__headline
    text-align center
    text-transform uppercase
    letter-spacing 0.3rem
    font-size 1.8rem
    margin 2rem 0

.newspaper__content 
    display grid
    // display the nested articles with at least a width of 300px, with a structure similar to the one concocted for the header section
    grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    text-align center
    
    .newspaper__content--article
        max-width 300px
        margin 1rem auto
        padding 1rem
        
        &:nth-of-type(1)
            border-right 2px solid color-text
            
            p:nth-of-type(2)
                border-top 1px solid color-text

        &:nth-of-type(3)
            border-left 2px solid color-text
            border-top 2px solid color-text

        h3
            text-transform uppercase
            letter-spacing 0.1rem
            font-size 1.5rem
            
        p
            margin 1rem 0
            padding 1rem 0
            text-align justify
            
        svg.paperboy
            padding 0 1rem
            width 100%
            
        .newspaper__content--article-followup
            border-top 1px solid color-text
            border-left 1px solid color-text
            padding 1.5rem
            
@media only screen and (max-width: 1000px)
    // for screen devices which allow to visualize only two headers reposition the h1 on top of the h2
    // hide the second header as it provides no real utility
    .newspaper__header h1
        order -1

    .newspaper__header h2:nth-of-type(2)
        display none
    // additionally and for the content of the newspaper, redefine the border of the last article as to present a border-left only
    .newspaper__content .newspaper__content--article:nth-of-type(3)
        border-left none
        border-top none
        border-right 2px solid color-text