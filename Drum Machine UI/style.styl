@import url('https://fonts.googleapis.com/css?family=Lato')

// define the font and colors used in the project 
/*
- lato for the few text-based elements
- blue for the background 
- red for the container
- white for the text and buttons
- blue-light for more subtle text
*/
font = 'Lato', sans-serif
blue = #0a1e50
red = #dd1f19
white = #f0f0f0
blue-light = #8295c2

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    width 100%
    min-height 100vh
    font-family font
    color white
    // include a blue background with a red circle in the center of the viewport
    // instead of a hard stop, include the tranparent color slightly afterwards to avoid the rough edges of the circle
    background radial-gradient(circle at 50% 50%, red 30%, transparent 30.1%), blue
    background-repeat no-repeat

.app
    // display the .support and .main containers in grid cells which reside side by side, and are at least 400px wide 
    display grid
    grid-template-columns repeat(auto-fit, minmax(400px, 1fr))
    // have the implicit rows be 100px (this allows the .app__support container to occupy some space even without text)
    grid-auto-rows 100px
    // include padding to almost center the elements in the page
    padding 25vh 0
    // center .app__main and .app__support in their respective cell
    justify-items center

.app__support .support--display
    font-size calc(3rem + 2.5vw)
    text-transform uppercase
    font-weight bold

.app__main
    // display the nine clickable elements in a 3x3 grid, with 120px by 120px cells
    display grid 
    grid-template-columns repeat(3, 120px)
    grid-auto-rows 120px
    // separate the cells from one another
    grid-gap 15px

    .main--button 
        // button style
        border none 
        border-radius 8px 
        background rgba(white, 0.8) 
        box-shadow 0 2px 10px rgba(white, 0.4)
        // text style
        color blue-light
        font-size 1.15rem
        text-transform uppercase
        font-weight bold
        // position the text in the bottom right corner
        text-align right
        line-height 130px
        padding 1rem
        // transition for the hover and focus states
        transition all 0.2s ease-out

        // beside the hover and focus and active states, include the selected styles also for a class
        // this class is used in the script to emulate the pseudo selector when the key strokes are pressed
        &:hover, &:focus, &.focus
            // on hover darken the text, remove transparency, increase roundness and reduce the shadow
            color darken(blue-light, 25%)
            border-radius 12px
            background white
            box-shadow 0 2px 5px rgba(white, 1)
        &:active, &.active
            // when active, scale
            transform scale(1.1)

// on smaller viewports, reduce the vertical padding of the main container and the size of the cells
// include also vertical margin between the two containers
@media (max-width: 500px) 
    .app 
        padding 10vh 0
    
    .app__support
        margin-bottom 5vh

    .app__main 
        grid-template-columns repeat(3, 100px)
        grid-auto-rows 100px

