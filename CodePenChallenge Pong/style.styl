@import url('https://fonts.googleapis.com/css?family=Roboto');

black = #000000
white = #ededed
font-main = 'Roboto', sans-serif

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    font-family font-main
    background-color black 
    color white 
    overflow hidden

.container 
    width 100%
    height 100vh
    position relative

    &:before
        content ''
        position absolute 
        top 0 
        left calc(50% - 4px/2)
        height 100%
        width 4px 
        background-color white

    .rectangle
        height 25%
        width 20px
        background-color white
        position absolute 
        top calc(50% - 180px/2)
        margin-top -90px
        transition all 0.4s ease-out
    
    .rectangle--left
        left 0

    .rectangle--right 
        right 0
        &:hover
            top 0

    .points
        font-size 3.2rem
        font-weight bold
        letter-spacing 0.7rem
        position absolute 
        top 1.5rem 

    .points--left 
        left 25%

    .points--right
        right 25%
    
    .pong 
        width 64px
        height 64px
        border-radius 50%
        background-color white
        position absolute 
        top calc(50% - 64px/2)
        left calc(50% - 64px/2)
        cursor pointer
        outline none 
        border none
        z-index 5

        &:before 
            content ''
            position absolute 
            top calc(50% - 48px/2)
            left calc(50% - 48px/2)
            width 48px
            height 48px
            border-radius 50%
            background-color black
            transition all 0.25s cubic-bezier(0.1, -0.2, 0.75, 1.3)
        
        &:after
            content ''
            position absolute 
            top calc(50% - 32px/2)
            left calc(50% - 16px/2)
            width 0
            height 0
            border-top 16px solid transparent
            border-left 20px solid white
            border-bottom 16px solid transparent
            
        &.playing:before
            top 50%
            left 50%
            width 0
            height 0

        &.playing:after
            border none 
            width 28px
            height 28px
            top calc(50% - 28px/2)
            left calc(50% - 28px/2)
            background-color black

    .pong--disk
        width 28px
        height 28px
        border-radius 50%
        background-color white
        position absolute 
        top calc(50% - 28px/2)
        left calc(50% - 28px/2)
