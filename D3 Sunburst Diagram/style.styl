@import url('https://fonts.googleapis.com/css?family=Lato')

font-text = 'Lato', sans-serif
color-card = #fff
color-bg = #3a3c5c
color-text = color-bg

*
    box-sizing border-box
    margin 0
    padding 0

body
    min-height 100vh
    width 100%
    font-family font-text
    color color-text
    background color-bg

.container
    max-width 800px
    width 90vw
    margin 1rem auto
    padding 2rem 1rem
    background color-card
    box-shadow 0 1px 5px 0 darken(color-card, 5%)

    h1
        text-transform capitalize
    p
        line-height 2
        margin-bottom 1.5rem

    #tooltip
        position absolute
        pointer-events none
        padding 1rem 1.5rem 0.5rem
        line-height 2
        border-top 4px solid color-bg
        box-shadow 0 1px 2px color-bg
        background color-card
        border-radius 4px
        transition all 0.25s ease-out
    a
        font-size 0.9rem
        color inherit
        text-decoration underline dotted


