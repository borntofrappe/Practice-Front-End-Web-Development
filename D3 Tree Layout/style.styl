@import url('https://fonts.googleapis.com/css?family=Lato')

font-text = 'Lato', sans-serif
color-text = #f0f0f0
color-background = #70389B

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    font-family font-text
    color color-text
    background color-background   

// center the container horizontally and limit its width 
// center the nested text elements as well 
.container
    width 90vw
    max-width 1000px
    margin 1rem auto
    text-align center

    h1#title
        font-size calc(2rem + 1vw)
        text-transform capitalize
        border-bottom 1px solid color-text
        display inline-block
        margin 1rem 0 2rem

    svg 
        path.link
            // include stroke, no path for the links
            fill none
            stroke-width 2px
            // reduce the opacity of the links
            stroke rgba(color-text, 0.5)
        g.node
            // include white fill for the text and the circle elements
            fill color-text
            font-size 1.5rem
            font-family inherit


