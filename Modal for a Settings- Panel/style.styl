@import url('https://fonts.googleapis.com/css?family=Lato');

// define variables for the font and color used in the project
font-main = 'Lato', sans-serif
orange = #F36653
dark-blue = #1f1c3d

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    font-family font-main
    // text and background are actually made of the same color, but the text will be visible on top of the differently painted settings' panel
    color dark-blue
    background-color dark-blue

.container 
    height 100vh
    // position relative to absolute position button and settings' panel
    position relative

    button 
        // include a small reset style for the button
        outline none 
        border none 
        background none 
        cursor pointer 

        // position the button in the top right of the screen
        position absolute 
        top 2rem 
        right 2rem

        // remember the height of the button as the settings' panel needs to be displayed right beneath the button itself
        width 3.5rem
        height 3.5rem
        // transition for hover and active states
        transition all 0.3s ease

        &:hover
            transform scale(1.05) rotate(90deg)
        &:active
            transform scale(1.15) rotate(90deg)

    .modal 
        // position the modal in the top right corner, but hide it from view
        position absolute 
        top 2rem 
        right 2rem 
        opacity 0
        visibility hidden
        transform scale(0) translateX(-30rem) translateY(10rem)
        transition all 0.3s ease-out

        color lighten(dark-blue, 10%)
        background orange
        padding 2rem        
        border 4px solid rgba(darken(orange, 10%), 0.85)        

        &.active
            // through the class of .active, toggled with JS at the click of the button, transition the panel into view in a swish-animation
            // visually the mix of vertical and horizontal translation, together with the change in scale, allows the panel to be brough into view almost with a curve 
            top 7rem
            transform scale(1) translateX(0) translateY(0)
            opacity 1
            visibility visible
            
        fieldset
            padding 0.8rem 1rem
            border-color rgba(darken(orange, 10%), 0.85)

            legend
                font-weight bold 
                letter-spacing 0.2rem           
                font-size 1.3rem
                padding 0.2rem 0.8rem
                text-transform capitalize 

            label 
                text-transform uppercase
                &:nth-of-type(1)
                    margin-right 10px

            input:checked + label 
                // style the selected option with a bolder label
                font-weight bold

                    
                
