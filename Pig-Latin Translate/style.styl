@import url('https://fonts.googleapis.com/css?family=Tajawal');

black = #0C0C0B
white = #FFFDFE
red = #FD191B
font-main = 'Tajawal', sans-serif

*
    box-sizing border-box
    margin 0
    padding 0
  
body
    min-height 100vh
    width 100%
    font-family font-main
    background-color white
    color black
    
.container 
    display flex 
    width 100%
    height 100vh
    justify-content center 
    align-items center
    padding 1.5rem 0.5rem

    .input-text
        width 40%
        margin 0 1rem
        height 60%
        border 1px solid rgba(black, 20%)
        background-color white
        transition all 0.2s ease-out 

        &:hover 
            border-color rgba(black, 50%)
            border-top-color rgba(black, 70%)

        textarea
            width 100%
            height 100%
            background none
            outline none
            resize none
            padding 1rem
            font-family inherit
            font-size 1.8rem
                

    .display-text 
        width 40%
        margin 0 1rem
        height 60%
        border 2px solid rgba(black, 30%)
        word-break break-all
        position relative
        background-color white

        svg
            position absolute
            top -75px
            right -50px
            transform rotate(15deg)
            width 100px
            height 100px
            cursor pointer

        p
            font-size 1.8rem
            padding 1rem
